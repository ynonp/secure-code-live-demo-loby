<div class="row">
  <div class="small-12 columns">
    <%= form_for(item) do |f| %>
      <%= render "shared/error_messages", :target => item %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :image %>
      <%= f.file_field :image, accept: 'image/*' %>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
